{
	"extends": [
		"config:base"
	],
	"automerge": true,
	"major": {
		"automerge": false
	},
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": false
	},
	"ignorePaths": [
		"deploy"
	],
	"packageRules": [{
			"packagePatterns": [
				"postcss"
			],
			"groupName": "postcss"
		},
		{
			"packagePatterns": [
				"gulp"
			],
			"groupName": "gulp"
		}
	],
	"node": {
		"supportPolicy": ["lts_active"]
	},
	"labels": [
		"renovate"
	],
	"prHourlyLimit": 4,
	"prConcurrentLimit": 15,
	"rangeStrategy": "bump",
	"bumpVersion": null,
	"semanticCommits": true,
	"schedule": "before 8am on Monday"
}
