{
	"extends": [
		"config:base"
	],
	"automerge": true,
	"major": {
		"automerge": false
	},
	"lockFileMaintenance": {
		"enabled": false,
		"automerge": false
	},
	"ignorePaths": [
		"deploy"
	],
	"packageRules": [{
			"packagePatterns": [
				"postcss"
			],
			"groupName": "postcss"
		},
		{
			"packagePatterns": [
				"gulp"
			],
			"groupName": "gulp"
		}
	],
	"labels": [
		"renovate"
	],
	"rangeStrategy": "bump",
	"bumpVersion": null,
	"semanticCommits": true,
	"timezone": "Asia/Kolkata",
	"schedule": "on monday and tuesday"
}
