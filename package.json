{
	"name": "santhoshveer",
	"description": "Light weight and Responsive Ghost theme.",
	"demo": "https://santhoshveer.com",
	"version": "0.0.3",
	"engines": {
		"ghost-api": "v4",
		"ghost": ">=4.0.0"
	},
	"scripts": {
		"dev": "gulp",
		"build": "gulp build",
		"zip": "gulp zip",
		"test": "gscan .",
		"test:ci": "gscan --fatal --verbose ."
	},
	"license": "MIT",
	"author": {
		"name": "Santhosh Veer",
		"email": "me@santhoshveer.com",
		"url": "https://santhoshveer.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mskian/santhosh-veer-blog.git"
	},
	"bugs": "https://github.com/mskian/santhosh-veer-blog/issues",
	"keywords": [
		"bulma",
		"responsive",
		"ghost-theme"
	],
	"config": {
		"posts_per_page": 5,
		"image_sizes": {
			"xxs": {
				"width": 30
			},
			"xs": {
				"width": 100
			},
			"s": {
				"width": 300
			},
			"m": {
				"width": 600
			},
			"l": {
				"width": 1000
			},
			"xl": {
				"width": 2000
			}
		}
	},
	"devDependencies": {
		"autoprefixer": "^10.4.0",
		"beeper": "^2.1.0",
		"cssnano": "^5.0.13",
		"gscan": "^4.17.0",
		"gulp": "^4.0.2",
		"gulp-livereload": "^4.0.2",
		"gulp-postcss": "^9.0.1",
		"gulp-sourcemaps": "^3.0.0",
		"gulp-watch": "^5.0.1",
		"gulp-zip": "^5.1.0",
		"postcss": "^8.4.5",
		"postcss-color-function": "^4.1.0",
		"postcss-custom-properties": "^12.0.0",
		"postcss-easy-import": "^3.0.0",
		"pump": "^3.0.0"
	},
	"browserslist": [
		"defaults"
	],
	"dependencies": {}
}
